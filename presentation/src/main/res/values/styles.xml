<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/dark_dark_gray</item>
        <item name="secondaryTextColor">@color/dark_gray</item>
        <item name="backgroundColor">@color/background</item>
        <item name="dividerColor">@color/bg_dark</item>
        <item name="bgColor">@color/white</item>
        <item name="titleColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="cardBgColor">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/dark_gray</item>
    </style>

    <style name="AppThemeWhite.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
